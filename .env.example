# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=freedom13
DB_USER=postgres
DB_PASSWORD=your_password_here

# Or use SQLite (leave DB_PASSWORD empty)
# SQLite will be used automatically if DB_PASSWORD is not set

# JWT Secrets (generate random 32+ character strings)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
SECRET_KEY=your_secret_key_here_minimum_32_characters

# hCaptcha (get from https://www.hcaptcha.com/)
HCAPTCHA_SECRET=your_hcaptcha_secret_key

# Environment
FLASK_ENV=production
SERVE_STATIC=true

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS (comma-separated for production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
